#side Ehren
#color F1F
#type Eater
#hardware
  constructor .4
  eater 2
  food-sensor 3
  robot-sensor 10
  blaster 20 10 50
  processor 10
  engine .1
  energy 50 50
  armor 40
#code

#vector dest
#var delay 100

new-dest:
  0 world-width random 0 world-height random dest!
return

#start
new-dest& call
do
  autoconstruct

  eaten nif
    delay periodic-food-sensor if
      10 delay!
      food-found if
        food-position dest!
      else
        position dest dist 1 < if
          new-dest& call
        then
      then
    then
  then

  50 periodic-robot-sensor if
    robot-found if
      robot-position robot-velocity lead-blaster
      robot-position dest!
    then
  then

  dest seek-location

forever
#end
